class Star:
    def __init__(self):
        self.x = random(width)
        self.y = random(height)
        self.d = random(2, 10)
        
    def show(self):
         ellipse(self.x, self.y,self.d,self.d)
    
    
    
    def update(self):
        self.x+=1
        self.y+=1
        
    
        if (self.x - self.d/2> width):
            self.x=random(width)    
        if (self.y - self.d/2> height):
            self.y=random(height)  
            
        
